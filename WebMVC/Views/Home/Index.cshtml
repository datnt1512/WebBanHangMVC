@model IEnumerable<WebMVC.Models.Product>
@{

}
<div class="row">
    <div class="col-md-9">
        <div class="well well-lg offer-box text-center">
            Today's Offer : &nbsp; <span class="glyphicon glyphicon-cog"></span>&nbsp;40 % off  on purchase of $ 2,000 and above till 24 dec !
        </div>
        <div class="main box-border">
            @Html.Partial("_Slider")

        </div>
        <br />
    </div>
    <!-- /.col -->

    <div class="col-md-3 text-center">
        @Html.Action("_GetNewProduct")
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-md-3">
        <div>
            <a href="#" class="list-group-item active">
                Loại sản phẩm
            </a>
            <ul class="list-group">

                @Html.Action("_GetCategories")

            </ul>
        </div>

        <!-- /.div -->
    </div>
    <!-- /.col -->
    <div class="col-md-9">

        <div>
            <ol class="breadcrumb">
                <li><a href="#">Trang chủ</a></li>
                <li class="active">Sản phẩm</li>
            </ol>
        </div>
        <!-- /.div -->
        <div class="row">
            <div class="btn-group alg-right-pad">
                <button type="button" class="btn btn-default"><strong>@Model.Count()  </strong>Sản phẩm</button>

            </div>
        </div>
        <!-- /.row -->
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-md-4 text-center col-sm-6 col-xs-6">
                    <div class="thumbnail product-box">
                        <img src="@Url.Content("~/Images/" + item.SrcImage)" />
                        <div class="caption">
                            <h3><a href="#">@item.ProductName </a></h3>
                            <p>Đơn giá : <strong>@String.Format("{0:N0} ₫", item.Price)</strong>  </p>
                            <p>  <a href="@Url.Action("Detail", "Product", new { id = item.ProductId, alias = item.Alias })" class="btn btn-primary" role="button">Chi tiết</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- /.row -->


    </div>
    <!-- /.col -->
</div>