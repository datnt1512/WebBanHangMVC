@using WebMVC.Enums;
<div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="@Url.Action("Index","Home")"><strong>DIGI</strong> Shop</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">


        <ul class="nav navbar-nav navbar-right">
            @*<li><a href="#">Track Order</a></li>*@
            @if (User.Identity.IsAuthenticated == false)
            {
                <li><a href="@Url.Action("Login","Account")">Đăng nhập</a></li>
                <li><a href="@Url.Action("Register","Account")">Đăng ký</a></li>
            }
            @if (User.Identity.IsAuthenticated && User.IsInRole(RoleType.Admin.ToString()))
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="user-info">Trang quản trị</span> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">

                        <li class="divider"></li>
                        <li><a href="@Url.Action("User","Admin")">Danh sách người dùng</a></li>
                        <li><a href="@Url.Action("Category","Admin")">Quản lý loại sản phẩm</a></li>
                        <li><a href="@Url.Action("Product","Admin")">Quản lý sản phẩm</a></li>
                    </ul>
                </li>
            }


            @if (User.Identity.IsAuthenticated)
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="user-info">@User.Identity.Name</span> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">

                        <li class="divider"></li>
                        <li><a href="@Url.Action("Logout","Account")">Đăng xuất</a></li>
                    </ul>
                </li>
            }
        </ul>
        @*<form class="navbar-form navbar-right" role="search">
            <div class="form-group">
                <input type="text" placeholder="Enter Keyword Here ..." class="form-control">
            </div>
            &nbsp;
            <button type="submit" class="btn btn-primary">Search</button>
        </form>*@
    </div>
    <!-- /.navbar-collapse -->
</div>